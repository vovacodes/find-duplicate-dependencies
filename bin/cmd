#! /usr/bin/env node

var util = require('util');
var chalk = require('chalk');
var findDuplicatedDependencies = require('../find-duplicated-dependencies');

findDuplicatedDependencies().then(
    function(duplicates) {

      if (Object.keys(duplicates).length) {

        printFailMessage(duplicates);
        return process.exit(1);
      }

      printSuccessMessage();
    }
).catch(function(err) {

  console.error(err.stack);
  return process.exit(1);
});


function printSuccessMessage() {

  console.log(chalk.green('There are no duplicated dependencies in your package. Congratulations!'));
}

function printFailMessage(duplicates) {

  console.log(chalk.red('This package has the following duplicated dependencies:\n'));

  Object.keys(duplicates).forEach(function(key) {

    console.log(chalk.red(key), ':');
    console.log(util.inspect(duplicates[key], { colors: true }), '\n');
  });

  console.log(chalk.red('Please run "npm dedupe" to see if that could be fixed. If not, manually resolve version conflicts'));
}
